<odoo>
  <data>
    <!-- Vista de Lista -->
    <record model="ir.ui.view" id="biblioteca_detallePrestamos_list">
      <field name="name">detallePrestamos.list</field>
      <field name="model">biblioteca.detallePrestamos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="libro_id"/>
          <field name="prestamo_id"/>
        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
    <record model="ir.ui.view" id="biblioteca_detallePrestamos_form">
      <field name="name">detallePrestamos.form</field>
      <field name="model">biblioteca.detallePrestamos</field>
      <field name="arch" type="xml">
        <form string="Detalle de Préstamo">
          <group>
            <field name="libro_id"/>
            <field name="prestamo_id"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Acción para Abrir la Vista de Lista y Formulario -->
    <record model="ir.actions.act_window" id="detallePrestamo_action_window">
      <field name="name">Detalle de Préstamo</field>
      <field name="res_model">biblioteca.detallePrestamos</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="biblioteca_detallePrestamos_list"/>
    </record>

    <!-- Menú para Gestionar Préstamos de Libros -->
    <menuitem name="Gestión de Préstamos de Libros" id="Gestion_Prestamos" parent="biblioteca.menu_root" action="detallePrestamo_action_window"/>
  </data>
</odoo>
