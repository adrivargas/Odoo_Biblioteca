<odoo>
  <data>
    <!-- List View -->
    <record model="ir.ui.view" id="biblioteca_prestamo_list">
      <field name="name">prestamo.list</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha_prestamo"/>
          <field name="cliente_id"/>
          <field name="empleado_id"/>
          <field name="tiempo"/>
          <field name="retraso"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="biblioteca_prestamo_form">
      <field name="name">prestamo.form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form string="Préstamo de Libro">
          <group col="2">
            <field name="fecha_prestamo"/>
            <field name="tiempo"/>
            <field name="retraso"/>
          </group>
          <group>
            <field name="cliente_id"/>
            <field name="empleado_id"/>
          </group>
          <notebook>
            <page string="Detalles del Préstamo">
              <field name="detalle_ids">
                <tree editable="bottom">
                  <field name="libro_id"/>
                </tree>
              </field>
            </page>
          </notebook>
        </form>
      </field>
    </record>

    <!-- Window Action -->
    <record model="ir.actions.act_window" id="prestamo_action_window">
      <field name="name">Préstamo de Libro</field>
      <field name="res_model">biblioteca.prestamo</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="biblioteca_prestamo_list"/>
    </record>

    <!-- Menu Item -->
    <menuitem name="Préstamo de Libro" id="prestamo_libro_menu" parent="biblioteca.menu_root" action="prestamo_action_window"/>
  </data>
</odoo>
