<odoo>
  <data>
    <!-- Vista de Lista -->
    <record model="ir.ui.view" id="biblioteca_libros_tree">
      <field name="name">libros.list</field>
      <field name="model">biblioteca.libros</field>
      <field name="arch" type="xml">
        <tree>
          <field name="autor"/>
          <field name="isbn"/>
        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
    <record model="ir.ui.view" id="biblioteca_libros_form">
      <field name="name">libros.form</field>
      <field name="model">biblioteca.libros</field>
      <field name="arch" type="xml">
        <form string="Libro">
          <group>
            <field name="autor"/>
            <field name="isbn"/>
            <!-- Puedes agregar más campos aquí según sea necesario -->
          </group>
        </form>
      </field>
    </record>

    <!-- Acción para Abrir la Vista de Lista y Formulario -->
    <record model="ir.actions.act_window" id="libro_action_window">
      <field name="name">Gestión de Libros</field>
      <field name="res_model">biblioteca.libros</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="biblioteca_libros_tree"/>
    </record>

    <!-- Menú para Gestionar Libros -->
    <menuitem name="Gestión de Libros" id="Gestion_libro" parent="biblioteca.menu_root" action="libro_action_window"/>
  </data>
</odoo>
