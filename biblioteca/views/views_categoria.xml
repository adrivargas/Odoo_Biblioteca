<odoo>
  <data>
    <!-- List View -->
    <record model="ir.ui.view" id="biblioteca_categoria_list">
      <field name="name">categoria.list</field>
      <field name="model">biblioteca.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="restriccion"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="biblioteca_categoria_form">
      <field name="name">categoria.form</field>
      <field name="model">biblioteca.categoria</field>
      <field name="arch" type="xml">
        <form string="Categoría de Biblioteca">
          <group>
            <field name="nombre"/>
            <field name="restriccion"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Window Action -->
    <record model="ir.actions.act_window" id="categoria_action_window">
      <field name="name">Categoría</field>
      <field name="res_model">biblioteca.categoria</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="biblioteca_categoria_list"/>
    </record>

    <!-- Menu Item -->
    <menuitem name="Gestión de Categorías" id="gestion_categorias_menu" parent="biblioteca.menu_root" action="categoria_action_window"/>
  </data>
</odoo>
