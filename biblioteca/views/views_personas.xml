<odoo>
  <data>
    <!-- Vista de Lista -->
    <record model="ir.ui.view" id="biblioteca_personas_tree">
      <field name="name">personas.list</field>
      <field name="model">biblioteca.personas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="ci"/>
          <field name="telefono"/>
          <field name="direccion"/>
          <field name="sexo"/>
          <field name="edad"/>
          <field name="tipo"/>
          <field name="biblioteca_id"/>
        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
    <record model="ir.ui.view" id="biblioteca_personas_form">
      <field name="name">personas.form</field>
      <field name="model">biblioteca.personas</field>
      <field name="arch" type="xml">
        <form string="Persona">
          <group>
            <field name="nombre"/>
            <field name="ci"/>
            <field name="telefono"/>
            <field name="direccion"/>
            <field name="sexo"/>
            <field name="edad"/>
            <field name="tipo"/>
            <field name="biblioteca_id"/>
            <!-- Puedes agregar más campos aquí según sea necesario -->
          </group>
        </form>
      </field>
    </record>

    <!-- Acción para Abrir la Vista de Lista y Formulario -->
    <record model="ir.actions.act_window" id="persona_action_window">
      <field name="name">Gestión de Personas</field>
      <field name="res_model">biblioteca.personas</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="biblioteca_personas_tree"/>
    </record>

    <!-- Menú para Gestionar Personas -->
    <menuitem name="Gestión de Personas" id="Gestion_Personas" parent="biblioteca.menu_root" action="persona_action_window"/>
  </data>
</odoo>
